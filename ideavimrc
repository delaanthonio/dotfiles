Plug 'easymotion/vim-easymotion'
Plug 'tpope/vim-surround'
Plug 'dbakker/vim-paragraph-motion'
Plug 'michaeljsmith/vim-indent-object'

nnoremap cc "+cc
nnoremap dd "+dd
nnoremap yy "+yy
vnoremap y "+y

nnoremap p "+p
vnoremap p "+p
nnoremap P "+P
vnoremap P "+P

let mapleader="<Space>"
map <Space> <Leader>
map <leader>s <Action>(GotoSymbol)
map <leader>a <Action>(GotoAction)
map <Space><Space> <Action>(GotoFile)
map <leader>qr <Action>(RestartIde)
